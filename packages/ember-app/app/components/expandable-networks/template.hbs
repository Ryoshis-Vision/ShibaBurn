      {{#if networksExpanded}}
        <div class='bold pointer' {{action 'toggleNetworksExpanded'}}>
          ›
        </div>
        <div class='networks flex-column'>
          <a href='#' {{action 'setNetwork' 'arbitrum'}} class='arbitrum-link'>
            ARBITRUM
          </a>
          <a href='#' {{action 'setNetwork' 'eth'}} class='eth-link'>
            ETH
          </a>
          <a href='#' {{action 'setNetwork' 'bsc'}} class='bsc-link'>
            BSC
          </a>
          <a href='#' {{action 'setNetwork' 'matic'}} class='matic-link'>
            MATIC
          </a>
        </div>
      {{else}}
        <div class='bold pointer' {{action 'toggleNetworksExpanded'}}>
          ⌄
        </div>
        <div class='networks'{{action 'toggleNetworksExpanded'}}>
          <a href='#' class='{{ethereum.network}}-link'>
            {{ethereum.currency}}
          </a>
        </div>
      {{/if}}

